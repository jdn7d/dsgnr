<%= form_for @piece do |f| %>

   <%= f.label :name %>
   <%= f.text_field :name %> <br>

   <%= f.label :style %>
   <%= f.text_field :style %> <br>

   <%= f.label :quantity %>
   <%= f.number_ :quantity %> <br>

   <%= f.label :category %> 
   <%= f.select :category, options_for_select(["Seating", "Tables", "Storage", "Rugs", "Lighting", "Decor", "Bed",]), include_blank: true %> <br>
   
   <%= f.label :room_id %>
   <%= f.select :room_id, options_from_collection_for_select(Room.all, :id, :name) %> <br>

   <%= f.label :store_id %>
   <%= f.select :store_id, options_from_collection_for_select(Store.all, :id, :name), include_blank: true %> <br>

   <%= f.submit %>
   
<% end %>
