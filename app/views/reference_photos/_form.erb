<%= form_for ([@room, @reference_photo]) do |f| %>


   <%= f.label :link %>
   <%= f.text_field :link %> <br>

   <% if @room %>
      <%= f.hidden_field :room_id, :value => @room.id %>
   <% elsif @reference_photo.link %>
      <%= f.label :room_id %>
      <%= f.select :room_id, options_from_collection_for_select(@rooms, :id, :name, @reference_photo.room.id.to_i) %> <br>
   <% else %>
      <%= f.label :room_id %>
      <%= f.select :room_id, options_from_collection_for_select(@rooms, :id, :name) %> <br>
   <% end %>

   <%= f.submit %>
   
<% end %>
